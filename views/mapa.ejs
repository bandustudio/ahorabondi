<%- contentFor('body') %>

    <div id="driverDetails"></div> 
    <div id="userPosition"></div>
    <div id="status" class="container-fluid text-left"></div>
    <div id="notification" class="container-fluid"></div>
    <div id='map' class="selection"></div>

    <script id="details" type="text/x-jsrender">
        <div class="content">
        {{if count > 0}}
            <p><strong>{{:count}}</strong> dispositivo{{if count > 1}}s{{/if}}</p>
            <ul>
            {{for drivers}}
                <li class="pointer">
                    <a href="#{{:displayName}}" id="{{:displayName}}" lat="{{:location.latitude}}" lng="{{:location.longitude}}" zoom="18">{{:displayName}} <small>{{:customMsg}}</small></a>
                </li>
            {{/for}}
            </ul>
        {{else}}
            <p>Nadie está compartiendo tu viaje ahora. <a href="/<%=uuid%>" title="Transmitir la ubicación de tu teléfonoe en vivo ahora">Compartir ubicación</a></p>            
        {{/if}}
        </div>
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <!--script type="text/javascript" src='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.js'></script-->
    <script src='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>  
    <script type="text/javascript" src="/js/map.js"></script>